<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/loginprogressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="60dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView android:src="@drawable/outline_info_black_48"
                    android:id="@+id/info_button_home"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:padding="2dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/ushop_icon_1" />
            </RelativeLayout>


            <!-- Email Label -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/LoginFieldsTextLayout">

                <EditText
                    android:id="@+id/input_loginEmail"
                    style="@style/LoginFieldsTextStyle"
                    android:hint="Email"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Label -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/LoginFieldsTextLayout"
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/input_loginPassword"
                    style="@style/LoginFieldsTextStyle"
                    android:hint="Password"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login"
                style="@style/ButtonsStyle"
                android:padding="14dp"
                android:text="Login"
                android:textColor="@color/moderateGreen"
                android:background="@drawable/rounded_button"
                android:textSize="18sp" />

            <TextView android:id="@+id/link_reset_password"
                style="@style/ButtonsStyle"
                android:text="Forgot password?"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="6dp"
                android:textColor="@color/lightCyanBlue"
                android:fontFamily="sans-serif-thin"
                android:background="@drawable/rounded_button_dark"/>

            <TextView android:id="@+id/link_register"
                style="@style/ButtonsStyle"
                android:text="No account? Register"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="6dp"
                android:textColor="@color/lightCyanBlue"
                android:fontFamily="sans-serif-thin"
                android:background="@drawable/rounded_button_dark"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>