<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context = ".CategoryActivity"
    android:background="@drawable/light_background">

    <ImageView
        android:id="@+id/store_image_category"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/ushop_text_only"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button_dark"
                        android:padding="12dp"
                        android:layout_marginRight="10dp">
                        <ImageView
                            android:id="@+id/categoriesBakeryIcon2"
                            android:src="@drawable/bakery1"
                            android:layout_height="160dp"
                            android:layout_width="match_parent" />
                        <TextView
                            style="@style/categoriesLabelsStyle"
                            android:layout_width="match_parent"
                            android:text="Bakery"
                            android:layout_below="@+id/categoriesBakeryIcon2"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button_dark"
                        android:padding="12dp">
                        <ImageView
                            android:id="@+id/categoriesBakeryIcon3"
                            android:src="@drawable/bakery1"
                            android:layout_height="160dp"
                            android:layout_width="match_parent" />
                        <TextView
                            style="@style/categoriesLabelsStyle"
                            android:layout_width="match_parent"
                            android:text="Bakery"
                            android:layout_below="@+id/categoriesBakeryIcon3"/>
                    </RelativeLayout>

                </TableRow>

            </TableLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>