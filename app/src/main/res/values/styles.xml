<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="LoginFieldsTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">#20eaeaea</item>
    </style>

    <style name="LoginFieldsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/loginText</item>
    </style>

    <style name="ButtonsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dashboardIconsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/rounded_button_dark</item>
    </style>

    <style name="UserProfileFieldsTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">#20eaeaea</item>
    </style>

    <style name="UserProfileFieldsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/loginText</item>
    </style>

    <style name="UserProfileLabelsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/lightblueText</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>


    <style name="categoriesRelativeLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rounded_button_dark</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="categoriesIconsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="categoriesLabelsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/appDarkBlueGreen</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
